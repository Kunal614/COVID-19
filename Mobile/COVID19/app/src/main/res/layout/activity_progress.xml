<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/toolbar"
        android:elevation="0dp"
        app:title="FINAL REPORT"
        app:titleTextColor="#ffffff"
        android:background="#5C1349">


    </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROBABILITY THAT YOU ARE AFFECTED"
        android:layout_marginLeft="8dp"
        android:padding="10dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorAccent"
        android:id="@+id/t1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RISK FACTOR"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/t2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorAccent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic protective measures against the new coronavirus"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        android:textColor="#000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Wash your hands frequently\n\n 2.Maintain social distancing\n\n
3. Avoid touching eyes, nose and mouth\n\n4. Practice respiratory hygiene\n\n5. If you have fever, cough and difficulty breathing, seek medical care early\n
\n6. Stay informed and follow advice given by your healthcare provider"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorAccent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STAY HOME STAY SAFE"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>